<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.ride.web.dao.UserAuthorDao">
    <insert id="add">
        INSERT INTO t_user_author (user_id, node_id) VALUES (#{userId}, #{nodeId})
    </insert>

    <delete id="delete">
        DELETE FROM t_user_author
        WHERE user_id = #{userId} AND node_id = #{nodeId}
    </delete>

    <delete id="deleteById">
        DELETE FROM t_user_author
        WHERE user_author_id = #{userAuthorId}
    </delete>
</mapper>